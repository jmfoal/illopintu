    function addClick(x, y, dragging)
    {
      clickX.push(x);
      clickY.push(y);
      clickDrag.push(dragging);
    }

    function redraw(){
        //context.clearRect(0, 0, context.canvas.width, context.canvas.height); // Clears the canvas

        context.strokeStyle = "black";
        context.lineJoin = "round";
        context.lineWidth = 10;

        for(var i=0; i < clickX.length; i++) {
          context.beginPath();
          if(clickDrag[i] && i){
            context.moveTo(clickX[i-1], clickY[i-1]);
           }else{
             context.moveTo(clickX[i]-1, clickY[i]);
           }
           context.lineTo(clickX[i], clickY[i]);
           context.closePath();
           context.stroke();
        }
        $(".dibujando").html(Dibujando);
    }

    function limpiar() {
        $("#canvas").removeClass("eg");
        context.clearRect(0, 0, context.canvas.width, context.canvas.height);
        clickX = new Array();
        clickY = new Array();
        clickDrag = new Array();
        mandarDibujo();
    }

    /*Metodos de enviar y recibir informacion*/

    function mandarDibujo(){
        objetojson = {
            "posX": clickX,
            "posY": clickY,
            "clickDrag": clickDrag
        };

        $.ajax({
           url: "/Game/setDibujo",
           data: objetojson,
           type: 'POST'
        });

    }

    function enviar(){
        entrada = $(":input[name=entrada]").val();

        json ={
            "User": User,
            "Mensaje": entrada
        };

        $.ajax({
            url: "/Game/setChat",
            type: 'POST',
            data: json,
            success: comprobar
        });
         $(":input[name=entrada]").val('');
    }

    function comprobar(response) {
        if (response.correcto) {            
            Palabra = response.Palabra;
            $(".palabra").html(Palabra);
            alert("you did it");
        };
    }

    function recibir(){
        $.ajax({
            url: "/Game/getChat",
            success: escribirChat
        });
    }

    function escribirChat(response) {
        $textarea = $("#chat");
        $textarea.html('');
        for (var i = 0; i < response.length; i++) {
            $textarea.append("<p>"+response[i]+"</p>");
        }
    }

    $(":input[name=entrada]").on('keypress',function(evento){
       if(evento.keyCode === 13){
           enviar();
       }
    });

    window.onbeforeunload = function (evt) {
            objetojson = {
                "Username": User
            };

            $.ajax({
                url: localhost + "/Game/logout",
                type: "post",
                data: objetojson,
                async: false
            });   
    };

    function establecer(response){
        context.clearRect(0, 0, context.canvas.width, context.canvas.height);
        clickX = response.posX;
        clickY = response.posY;
        clickDrag = response.clickDrag;
        Dibujando = response.Dibuja;
        $(".palabra").html("");
        for (i = 0; i < response.numLetras; i++) {
            $(".palabra").append("_ ");
        }
        
        redraw();
    }

    function easteregg() {
        $("#canvas").addClass("eg");
    }

    setInterval(function () {
        if (Dibujando == User) {
            mandarDibujo();
        } else {
            $.ajax({
                url: "/Game/getDibujo",
                dataType: 'json',
                success: establecer
            });
        }
    }, 100);

    setInterval(recibir, 1500);

    $(document).ready(function () {
        $(".dibujando").html(Dibujando);
    })

    setInterval(function () {
        if (User == Dibujando) {
            $('#canvas').on("mousedown", (function (e) {
                // if(Dibujando==User){
                var mouseX = e.pageX - this.offsetLeft;
                var mouseY = e.pageY - this.offsetTop;

                paint = true;
                addClick(e.pageX - this.offsetLeft, e.pageY - this.offsetTop);
                redraw();
                // }
            }));

            $('#canvas').on("mousemove", (function (e) {
                // if(Dibujando==User){
                if (paint) {
                    addClick(e.pageX - this.offsetLeft, e.pageY - this.offsetTop, true);
                    redraw();
                }
                //  }
            }));

            $('#canvas').on("mouseup", (function (e) {
                paint = false;
            }));

            $('#canvas').on("mouseleave", (function (e) {
                paint = false;
            }));
        } else {
            $("#canvas").off();
        }
    },100);

</script>
