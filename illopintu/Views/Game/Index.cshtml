
@{
    ViewBag.Title = "Index";
}

<div class="canvas-container">
    <div id="logica">
        <p class="panel-title">La palabra es: </p>
        <p class="palabra"></p>
    </div>
    <canvas id="canvas" width="750" height="750"></canvas>
    
</div>

<div class="chat-container">
    <div id="chat"></div>
    <input type="text" name="entrada" />
    <button class="btn btn-default send" onclick="enviar()">Send</button>
    <button class="btn btn-default clear" onclick="limpiar()">Clean</button>
</div>

<div class="easter-egg">
    <button class="btn btn-default easter-egg-button" onclick="easteregg()">Eg</button>
</div>

<script>
    context = document.getElementById('canvas').getContext("2d");
    context.clearRect(0, 0, context.canvas.width, context.canvas.height);
    var clickX = new Array();
    var clickY = new Array();
    var clickDrag = new Array();
    var paint;
    var id;
    var User = "@ViewBag.user";
    var Dibujando = "patata";
    var Palabra = "patata";

    /*Metodos de dibujo*/

    
    $('#canvas').on("mousedown", (function (e) {
        if(Dibujando==User){
            var mouseX = e.pageX - this.offsetLeft;
            var mouseY = e.pageY - this.offsetTop;

            paint = true;
            addClick(e.pageX - this.offsetLeft, e.pageY - this.offsetTop);
            redraw();
        }
    }));

    $('#canvas').on("mousemove",(function(e){
        if(Dibujando==User){
            if (paint) {
            addClick(e.pageX - this.offsetLeft, e.pageY - this.offsetTop, true);
            redraw();
            }
        }
    }));

    $('#canvas').on("mouseup",(function(e){
        paint = false;
    }));

    $('#canvas').on("mouseleave",(function(e){
        paint = false;
    }));


    function addClick(x, y, dragging)
    {
      clickX.push(x);
      clickY.push(y);
      clickDrag.push(dragging);
    }

    function redraw(){
        //context.clearRect(0, 0, context.canvas.width, context.canvas.height); // Clears the canvas

        context.strokeStyle = "black";
        context.lineJoin = "round";
        context.lineWidth = 10;

        for(var i=0; i < clickX.length; i++) {
          context.beginPath();
          if(clickDrag[i] && i){
            context.moveTo(clickX[i-1], clickY[i-1]);
           }else{
             context.moveTo(clickX[i]-1, clickY[i]);
           }
           context.lineTo(clickX[i], clickY[i]);
           context.closePath();
           context.stroke();
        }
    }

    function limpiar() {
        $("#canvas").removeClass("eg");
        context.clearRect(0, 0, context.canvas.width, context.canvas.height);
        clickX = new Array();
        clickY = new Array();
        clickDrag = new Array();
        mandarDibujo();
    }

    /*Metodos de enviar y recibir informacion*/

    function mandarDibujo(){
        objetojson = {
            "posX": clickX,
            "posY": clickY,
            "clickDrag": clickDrag
        };

        $.ajax({
           url: "/Game/setDibujo",
           data: objetojson,
           type: 'POST'
        });

    }

    function enviar(){
        entrada = $(":input[name=entrada]").val();

        json ={
            "User": User,
            "Mensaje": entrada
        };

        $.ajax({
            url: "/Game/setChat",
            type: 'POST',
            data: json
        });
         $(":input[name=entrada]").val('');
    }

    function recibir(){
        $.ajax({
            url: "/Game/getChat",
            success: escribirChat
        });
    }

    function escribirChat(response) {
        $textarea = $("#chat");
        $textarea.html('');
        for (var i = 0; i < response.length; i++) {
            $textarea.append("<p>"+response[i]+"</p>");
        }
    }

    $(":input[name=entrada]").on('keypress',function(evento){
       if(evento.keyCode === 13){
           enviar();
       }
    });

    function palabraguion() {
        numero = Palabra.length;
        for (i = 0; i < numero; i++) {
            $(".palabra").append("_ ");
        }
    };

    window.onbeforeunload = function (evt) {

        objetojson = {
            "Username": user
        };

        $.ajax({
            url: localhost + "/Game/logout",
            type: "post",
            data: objetojson
        });
    };

    function establecer(response){
        context.clearRect(0, 0, context.canvas.width, context.canvas.height);
        clickX = response.posX;
        clickY = response.posY;
        clickDrag = response.clickDrag;
        
        redraw();
    }

    function easteregg() {
        $("#canvas").addClass("eg");
    }

    setInterval(function () {
        if (Dibujando == User) {
            mandarDibujo();
        } else {
            $.ajax({
                url: "/Game/getDibujo",
                dataType: 'json',
                success: establecer
            });
        }
    }, 100);

    setInterval(recibir, 1500);

    $(document).ready(function () {
        palabraguion();
    })

</script>
